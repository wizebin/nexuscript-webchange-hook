{
  "name": "nexuscript-webchange-hook",
  "version": "1.0.1",
  "description": "Notify nexuscript when data changes at a url",
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack --mode development",
    "build": "webpack --mode production"
  },
  "author": "Nexusoft",
  "license": "ISC",
  "devDependencies": {
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.3"
  },
  "dependencies": {
    "htmlparser2": "^3.9.2",
    "nexusdk": "github:wizebin/nexusdk",
    "node-fetch": "^2.1.2",
    "objer": "^1.0.26"
  },
  "nexuscript": {
    "type": "hook",
    "author": "nexuscript",
    "price": "free",
    "configuration": {
      "url": "string",
      "encoding": {
        "_type": "option",
        "_structure": [
          "html",
          "json",
          "raw"
        ]
      },
      "method": {
        "_type": "option",
        "_structure": [
          "GET",
          "POST",
          "PATCH",
          "PUT",
          "DELETE"
        ]
      },
      "body": "object",
      "headers": "array",
      "status_changes": "bool",
      "body_changes": "bool",
      "header_changes": "bool",
      "attribute_changes": "bool",
      "text_changes": "bool",
      "interval": "number"
    },
    "category": "web",
    "build_command": "npm run build",
    "dist_folder": "dist",
    "dist_file": "dist/main.js"
  }
}
